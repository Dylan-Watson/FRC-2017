<Window x:Class="WpfApplication1.Loading"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Height="300" Width="300" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20" Name="Padding"/>
            <ColumnDefinition Width="Auto" Name="Picture"/>
            <ColumnDefinition Width="*" Name="Loading"/>
        </Grid.ColumnDefinitions>
        <Image Grid.Column="1" Width="75" Height="75"/>
        <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="Auto" Margin="40,0,0,0" 
                 TextWrapping="Wrap" VerticalAlignment="Center" Width="144" Grid.Column="2"
                 Text="Loading..." TextAlignment="Center"/>
    </Grid>

</Window>
